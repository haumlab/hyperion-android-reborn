<resources>
    <!-- Base application theme - Modern dark theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>
    
    <!-- Modern dark theme for main activity -->
    <style name="AppTheme.Modern" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextStyle.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextStyle.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>
    
    <style name="TextStyle.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="LeanbackPreferences" parent="Theme.Leanback">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Leanback</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyOnboardingTheme" parent="Theme.Leanback.Onboarding">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.HyperionGrabber.GuidedActionItemDescriptionStyle" parent="Widget.Leanback.GuidedActionItemDescriptionStyle">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Fix text colors for GuidedStep settings -->
    <style name="Widget.HyperionGrabber.GuidedActionItemTitleStyle" parent="Widget.Leanback.GuidedActionItemTitleStyle">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Widget.HyperionGrabber.GuidedActionItemCheckmarkStyle" parent="Widget.Leanback.GuidedActionItemCheckmarkStyle">
        <item name="android:tint">@color/colorAccent</item>
    </style>
    
    <style name="Widget.HyperionGrabber.GuidanceTitleStyle" parent="Widget.Leanback.GuidanceTitleStyle">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Widget.HyperionGrabber.GuidanceDescriptionStyle" parent="Widget.Leanback.GuidanceDescriptionStyle">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="Widget.HyperionGrabber.GuidanceBreadcrumbStyle" parent="Widget.Leanback.GuidanceBreadcrumbStyle">
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <style name="Widget.HyperionGrabber.GuidanceIconStyle" parent="Widget.Leanback.GuidanceIconStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.HyperionGrabber.FirstStepGuidanceIconStyle" parent="Widget.HyperionGrabber.GuidanceIconStyle">
        <item name="android:background">#fff</item>
    </style>

    <style name="Theme.HyperionGrabber.GuidedStep" parent="Theme.Leanback.GuidedStep">
        <item name="guidedStepBackground">@color/colorPrimaryDark</item>
        <item name="guidedActionsBackground">@color/colorPrimaryExtraDark</item>
        <item name="guidedActionsBackgroundDark">@color/colorPrimarySuperDark</item>
        <item name="guidanceIconStyle">@style/Widget.HyperionGrabber.GuidanceIconStyle</item>
        <item name="guidanceTitleStyle">@style/Widget.HyperionGrabber.GuidanceTitleStyle</item>
        <item name="guidanceDescriptionStyle">@style/Widget.HyperionGrabber.GuidanceDescriptionStyle</item>
        <item name="guidanceBreadcrumbStyle">@style/Widget.HyperionGrabber.GuidanceBreadcrumbStyle</item>
        <item name="guidedActionItemTitleStyle">@style/Widget.HyperionGrabber.GuidedActionItemTitleStyle</item>
        <item name="guidedActionItemDescriptionStyle">@style/Widget.HyperionGrabber.GuidedActionItemDescriptionStyle</item>
        <item name="guidedActionItemCheckmarkStyle">@style/Widget.HyperionGrabber.GuidedActionItemCheckmarkStyle</item>
    </style>

    <style name="Theme.HyperionGrabber.GuidedStep.First" parent="@style/Theme.HyperionGrabber.GuidedStep">
        <item name="guidanceIconStyle">@style/Widget.HyperionGrabber.FirstStepGuidanceIconStyle</item>
    </style>

</resources>
