<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context="com.hyperion.grabber.tv.activities.MainActivity">

    <!-- Rainbow Background - Preserved as requested -->
    <com.hyperion.grabber.common.views.SweepGradientView
        android:id="@+id/sweepGradientView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.15" />

    <!-- Main Content - Simple centered layout for TV -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="48dp">

        <!-- Status Text - Simple and readable -->
        <TextView
            android:id="@+id/grabberStartedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/status_pill_background"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:text="STOPPED"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.15" />

        <!-- Power Button Container -->
        <FrameLayout
            android:id="@+id/powerButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <!-- Glow Effect Behind Button -->
            <View
                android:id="@+id/powerGlow"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:alpha="0"
                android:background="@drawable/power_button_glow" />

            <!-- Power Button Background Ring -->
            <View
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/power_button_background" />

            <!-- Power Button -->
            <ImageButton
                android:id="@+id/power_toggle"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@drawable/power_button_active"
                android:clickable="true"
                android:contentDescription="Power"
                android:focusable="true"
                android:nextFocusDown="@id/settingsButton"
                android:nextFocusUp="@id/settingsButton"
                android:padding="32dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_power_large"
                android:tint="@color/text_primary" />

        </FrameLayout>

        <!-- Settings Button - Clear and focusable for TV -->
        <Button
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="32dp"
            android:background="@drawable/button_secondary"
            android:drawableStart="@drawable/ic_settings_new"
            android:drawablePadding="12dp"
            android:drawableTint="@color/text_secondary"
            android:text="Settings"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:focusable="true"
            android:nextFocusUp="@id/power_toggle"
            android:nextFocusDown="@id/power_toggle" />

    </LinearLayout>

</FrameLayout>

