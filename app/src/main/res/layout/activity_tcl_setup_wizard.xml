<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context="com.hyperion.grabber.tv.activities.TclSetupWizardActivity">

    <!-- Subtle gradient overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_shield"
                android:tint="@color/accent_primary"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tcl_setup_title"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Additional setup required for your TV"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Step indicator - Modern pill style -->
        <LinearLayout
            android:id="@+id/stepIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <View
                android:id="@+id/step1Dot"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="@drawable/step_pill_active" />

            <View
                android:layout_width="8dp"
                android:layout_height="4dp" />

            <View
                android:id="@+id/step2Dot"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="@drawable/step_pill_inactive" />

            <View
                android:layout_width="8dp"
                android:layout_height="4dp" />

            <View
                android:id="@+id/step3Dot"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="@drawable/step_pill_inactive" />

            <View
                android:layout_width="8dp"
                android:layout_height="4dp" />

            <View
                android:id="@+id/step4Dot"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="@drawable/step_pill_inactive" />
        </LinearLayout>

    <!-- Content area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/card_surface_large"
            android:padding="28dp">

        <!-- Step 1: Introduction -->
        <LinearLayout
            android:id="@+id/step1Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tcl_step1_title"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tcl_step1_desc"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp" />

            <TextView
                android:id="@+id/deviceInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/card_surface_elevated"
                android:padding="16dp"
                android:textColor="@color/text_tertiary"
                android:textSize="13sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Step 2: Enable Developer Options -->
        <LinearLayout
            android:id="@+id/step2Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tcl_step2_title"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tcl_step2_desc"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp" />

            <Button
                android:id="@+id/btnOpenDeviceInfo"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="28dp"
                android:paddingHorizontal="24dp"
                android:text="@string/tcl_open_device_info"
                android:background="@drawable/button_primary"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:focusable="true" />
        </LinearLayout>

        <!-- Step 3: Enable ADB -->
        <LinearLayout
            android:id="@+id/step3Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tcl_step3_title"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tcl_step3_desc"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp" />

            <Button
                android:id="@+id/btnOpenDeveloperOptions"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="28dp"
                android:paddingHorizontal="24dp"
                android:text="@string/tcl_open_developer_options"
                android:background="@drawable/button_primary"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/status_card_background">

                <ProgressBar
                    android:id="@+id/adbCheckProgress"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/adbCheckIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/adbStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/tcl_checking_adb"
                    android:textColor="@color/text_tertiary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Step 4: Grant Permissions -->
        <LinearLayout
            android:id="@+id/step4Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tcl_step4_title"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tcl_step4_desc"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp" />

            <Button
                android:id="@+id/btnGrantPermissions"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="28dp"
                android:paddingHorizontal="24dp"
                android:text="@string/tcl_grant_permissions"
                android:background="@drawable/button_primary"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/status_card_background">

                <ProgressBar
                    android:id="@+id/permissionProgress"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/permissionCheckIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/permissionStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/text_tertiary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Authorization dialog info -->
            <LinearLayout
                android:id="@+id/authorizationHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_warning"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tcl_auth_hint_title"
                    android:textColor="@color/warning"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/tcl_auth_hint_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Success screen -->
        <LinearLayout
            android:id="@+id/successContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/success_glow" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="-100dp"
                android:src="@drawable/ic_check_circle"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/tcl_success_title"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/tcl_success_desc"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:gravity="center" />
        </LinearLayout>
        </FrameLayout>

    <!-- Navigation buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="28dp">

            <Button
                android:id="@+id/btnSkip"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:paddingHorizontal="20dp"
                android:text="@string/skip"
                android:background="@android:color/transparent"
                android:textColor="@color/text_tertiary"
                android:textAllCaps="false"
                android:focusable="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:paddingHorizontal="20dp"
                android:text="@string/back"
                android:background="@drawable/button_secondary"
                android:textColor="@color/text_secondary"
                android:textAllCaps="false"
                android:layout_marginEnd="12dp"
                android:focusable="true"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:paddingHorizontal="24dp"
                android:text="@string/next"
                android:background="@drawable/button_primary"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:focusable="true" />

            <Button
                android:id="@+id/btnFinish"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:paddingHorizontal="24dp"
                android:text="@string/tcl_start_grabber"
                android:background="@drawable/button_success"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:focusable="true"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
